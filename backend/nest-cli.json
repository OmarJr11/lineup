{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "public": {
      "type": "application",
      "root": "apps/public",
      "entryFile": "main",
      "sourceRoot": "apps/public/src",
      "compilerOptions": {
        "tsConfigPath": "apps/public/tsconfig.app.json"
      }
    },
    "system": {
      "type": "application",
      "root": "apps/system",
      "entryFile": "main",
      "sourceRoot": "apps/system/src",
      "compilerOptions": {
        "tsConfigPath": "apps/system/tsconfig.app.json"
      }
    }
  }
}